@using M000_DataAccess.Models
@model IEnumerable<Kurse>

<h2>Alle Kurse</h2>

<table class="table">
	<tr>
		<th>ID</th>
		<th>Kursname</th>
		<th>Dauer in Tagen</th>
		<th>Aktiv</th>
		<th></th>
	</tr>

	@foreach (Kurse k in Model)
	{
		<tr>
			<td>@k.Id</td>
			<td>@k.Kursname</td>
			<td>@k.DauerInTagen</td>
			<td>@k.Aktiv</td>
			<td>
				<a asp-action="KursBearbeiten" asp-route-id="@k.Id">
					<button>Bearbeiten</button>
				</a>
			</td>
		</tr>
	}
</table>